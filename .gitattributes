# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts
*.sh text eol=lf

# Batch files
*.bat text eol=crlf

# Python files
*.py text eol=lf

# Config files
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.env text eol=lf
*.env.* text eol=lf

# Binary files
*.pyc binary
*.pyo binary
*.pyd binary
*.so binary
*.dll binary
*.exe binary
*.zip binary
*.tar.gz binary
*.archive binary
*.archive.gz binary
